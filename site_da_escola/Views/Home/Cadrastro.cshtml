@model UsuariosModel
@{
    Layout = "_Layout"; 
    ViewData["Title"] = "Cadastro de Usuário";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="text-center mb-4">
                <h1 class="fw-bold text-primary animate__animated animate__fadeInDown">Crie sua Conta</h1>
            </div>

            <div class="card shadow-lg rounded-4 border-0 animate__animated animate__fadeInUp">
                <div class="card-body p-4">
                    <form asp-action="RegistrarUsuario" asp-controller="Home" method="post">
                        <div class="mb-3">
                            <label for="Nome" class="form-label">Nome</label>
                            <input type="text" class="form-control" id="Nome" name="Nome" asp-for="Nome" placeholder="Seu nome completo">
                        </div>
                        <div class="mb-3">
                            <label for="EmailCadastro" class="form-label">Email</label>
                            <input type="email" class="form-control" id="EmailCadastro" name="Email" asp-for="Email" placeholder="seuemail@exemplo.com" >
                        </div>
                        <div class="mb-3">
                            <label for="SenhaCadastro" class="form-label">Senha</label>
                            <input type="password" class="form-control" id="SenhaCadastro" name="Senha" asp-for="Senha" placeholder="********" >
                        </div>
                        <button type="submit" class="btn btn-primary w-100 fw-bold">Cadastrar</button>
                    </form>

                    <hr class="my-4">

                    <div class="text-center">
                        <p class="mb-2">Já possui uma conta?</p>
                        <a asp-action="Login" asp-controller="Home" class="btn btn-outline-primary w-100">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
