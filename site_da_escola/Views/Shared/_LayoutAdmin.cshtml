<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/Admin.css" asp-append-version="true" />
</head>

<body class="bg-light">

    <!-- HEADER -->
    <header class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm px-3">
        <div class="container-fluid">

            <!-- Logo -->
            <a asp-controller="AdminPage" asp-action="Index" class="navbar-brand d-flex align-items-center">
                <i class="bi bi-mortarboard-fill me-2"></i> Painel Escolar
            </a>

            <!-- Botão hamburguer somente no mobile -->
            <button class="navbar-toggler d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- MENU NO TOPO (somente em telas grandes) -->
            <div class="collapse navbar-collapse d-none d-lg-flex">
                <ul class="navbar-nav me-auto">

                    <li class="nav-item">
                        <a class="nav-link text-white fw-semibold" asp-controller="AdminPage" asp-action="Index">
                            Dashboard
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-white fw-semibold" asp-controller="AdminPage" asp-action="PostarNoticia">
                            Postar Notícia
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-white fw-semibold" asp-controller="AdminPage" asp-action="PostarEventos">
                            Postar Evento
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-white fw-semibold" asp-controller="AdminPage" asp-action="Usuarios">
                            Gerenciar Usuários
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-white fw-semibold" asp-controller="AdminPage" asp-action="Feedback">
                            Feedback
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-white fw-semibold" asp-controller="Home" asp-action="Index">
                            Voltar ao Site
                        </a>
                    </li>
                </ul>

                <!-- Info do admin -->
                <div class="d-flex align-items-center text-white gap-3">
                    <span class="fw-semibold">
                        <i class="bi bi-person-circle me-1"></i> Admin
                    </span>

                    <a asp-controller="Home" asp-action="Index" class="btn btn-light btn-sm">
                        <i class="bi bi-box-arrow-right me-1"></i> Sair
                    </a>
                </div>
            </div>

        </div>
    </header>

    <!-- SIDEBAR OFFCANVAS (somente no mobile) -->
    <div class="offcanvas offcanvas-start bg-dark text-white" tabindex="-1" id="sidebar">
        <div class="offcanvas-header border-bottom">
            <h5 class="mb-0">Menu Administrativo</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
        </div>

        <div class="offcanvas-body p-0">
            <nav class="nav flex-column p-2">

                <a class="nav-link text-white py-2" asp-controller="AdminPage" asp-action="Index">
                    <i class="bi bi-speedometer2 me-2"></i> Dashboard
                </a>

                <a class="nav-link text-white py-2" asp-controller="AdminPage" asp-action="PostarNoticia">
                    <i class="bi bi-newspaper me-2"></i> Postar Notícia
                </a>

                <a class="nav-link text-white py-2" asp-controller="AdminPage" asp-action="PostarEventos">
                    <i class="bi bi-calendar-event me-2"></i> Postar Evento
                </a>

                <a class="nav-link text-white py-2" asp-controller="AdminPage" asp-action="Usuarios">
                    <i class="bi bi-people me-2"></i> Gerenciar Usuários
                </a>

                <a class="nav-link text-white py-2" asp-controller="AdminPage" asp-action="Feedback">
                    <i class="bi bi-chat-dots me-2"></i> Feedback
                </a>

                <a class="nav-link text-white py-2" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-door me-2"></i> Voltar ao Site
                </a>

            </nav>
        </div>
    </div>

    <!-- CONTEÚDO -->
    <main class="container-fluid p-4" style="min-height: 80vh;">
        @RenderBody()
    </main>

    <footer class="text-center py-3 text-muted border-top bg-white">
        Developed by Gabriel | Painel Administrativo
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
